<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_row_padding"
    tools:showIn="@layout/activity_item">

    <ke.co.toshngure.basecode.images.NetworkImage
        android:id="@+id/storeAvatarNI"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:niCircled="true"
        app:niSrc="@drawable/dummy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_row_padding"
        android:layout_marginStart="@dimen/list_row_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/storeNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <ke.co.toshngure.basecode.view.MaterialTextView
            android:id="@+id/storeLocationTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_location_on_black_16dp"
            android:drawablePadding="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:tint="?attr/colorAccent"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>


</LinearLayout>
