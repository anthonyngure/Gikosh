<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ke.co.toshngure.gikosh.activity.EditorActivity"
    tools:showIn="@layout/activity_editor">

    <include layout="@layout/layout_fake_shadow" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <FrameLayout style="@style/EditorImageButtonContainer">

                    <ImageButton
                        android:id="@+id/boldBtn"
                        style="@style/EditorImageButton"
                        android:src="@drawable/ic_format_bold_black_24dp" />
                </FrameLayout>

                <FrameLayout style="@style/EditorImageButtonContainer">

                    <ImageButton
                        android:id="@+id/italicBtn"
                        style="@style/EditorImageButton"
                        android:src="@drawable/ic_format_italic_black_24dp" />
                </FrameLayout>

                <FrameLayout style="@style/EditorImageButtonContainer">

                    <ImageButton
                        android:id="@+id/alignLeftBtn"
                        style="@style/EditorImageButton"
                        android:src="@drawable/ic_format_align_left_black_24dp" />
                </FrameLayout>

                <FrameLayout style="@style/EditorImageButtonContainer">

                    <ImageButton
                        android:id="@+id/alignRightBtn"
                        style="@style/EditorImageButton"
                        android:src="@drawable/ic_format_align_right_black_24dp" />
                </FrameLayout>

                <FrameLayout style="@style/EditorImageButtonContainer">

                    <ImageButton
                        android:id="@+id/dividerBtn"
                        style="@style/EditorImageButton"
                        android:src="@drawable/ic_border_bottom_black_24dp" />
                </FrameLayout>

                <FrameLayout style="@style/EditorImageButtonContainer">

                    <ImageButton
                        android:id="@+id/unorderedListBtn"
                        style="@style/EditorImageButton"
                        android:src="@drawable/ic_format_list_bulleted_black_24dp" />
                </FrameLayout>



            </LinearLayout>

        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tools"
            android:layout_alignParentTop="true"
            android:scrollbars="vertical">

            <com.github.irshulx.Editor
                android:id="@+id/textEditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/list_row_padding"
                app:placeholder="Start writing here..."
                app:render_type="Editor" />
        </ScrollView>


    </RelativeLayout>

</LinearLayout>
